@model IEnumerable<DN_AsyncInn.Models.Room>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

@{<partial name="_NavBarPartial" />}

    <h1>All Rooms Types</h1>
    <div>Total number of Room Types: @Model.Count()  </div>

    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>

    <form asp-controller="Room" asp-action="Index">
        <p>
            Room Name: <input type="text" name="SearchString" method="get">
            <input class="btn btn-primary" type="submit" value="Filter" />
        </p>
    </form>

    <table class="table" align="center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Layout)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomAmenities)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Layout)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomAmenities.Count)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Go Home</a>

    