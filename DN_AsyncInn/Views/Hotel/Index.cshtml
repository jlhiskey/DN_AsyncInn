@model IEnumerable<DN_AsyncInn.Models.Hotel>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

@{<partial name="_NavBarPartial" />}

<h1>All Hotels</h1>
<div>Total number of Hotels: @Model.Count()  </div>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<form asp-controller="Hotel" asp-action="Index">
    <p>
        Hotel Name: <input type="text" name="SearchString" method="get">
        <input class="btn btn-primary" type="submit" value="Filter" />
    </p>
</form>

<table class="table" align="center">
    <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.HotelRooms)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelRooms.Count)
                </td>

                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="Home" asp-action="Index">Go Home</a>
